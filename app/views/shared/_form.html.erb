<div class="container w-50">
  <%= form_with model: user, url: url do |form| %>

    <% if user.errors.any? %>
      <div class="w-75 bg-secondary bg-opacity-25 shadow rounded">
        <ul class="text-danger">
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :username, class: "form-label" %>
      </div>
      <div class="col-6">
        <%= form.text_field :username, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :email, class: "form-label" %>
      </div>
      <div class="col-6">
        <%= form.email_field :email, required: true, class: "form-control" %>
      </div>
    </div>

    <% unless controller.action_name == "edit" %>
      <div class="row py-3">
        <div class="col-6 col-sm-3">
          <%= form.label :password, class: "form-label" %>
        </div>
        <div class="col-6">
          <%= form.password_field :password, required: true, class: "form-control" %>
        </div>
      </div>
      
      <div class="row py-3">
        <div class="col-6 col-sm-3">
          <%= form.label :password_confirmation, class: "form-label" %>
        </div>
        <div class="col-6">
          <%= form.password_field :password_confirmation, required: true, class: "form-control" %>
        </div>
      </div>    
    <% end %>

    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :profile_photo, class: "form-label" %>
      </div>
      <div class="col-6">
        <%= form.file_field :profile_photo, class: "form-control" %>
      </div>
    </div>

    <div class="text-center">
      <%= form.submit class: "btn btn-success" %>
    </div>
  <% end %>
</div>
